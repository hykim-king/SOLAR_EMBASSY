<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="community.solar_embassy.mapper.UsersMapper">

    <resultMap id="BaseResultMap" type="Users" autoMapping="true">
        <id property="userId" column="userid" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="passwords" column="passwords" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="hp" column="hp" jdbcType="VARCHAR"/>
        <result property="tell" column="tell" jdbcType="VARCHAR"/>
        <result property="adminId" column="admin_id" jdbcType="VARCHAR"/>
        <result property="regDate" column="reg_date" jdbcType="TIMESTAMP"/>
        <result property="lastLoginTime" column="last_login_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="cPoint" column="c_point" jdbcType="INTEGER"/>
        <result property="ePoint" column="e_point" jdbcType="INTEGER"/>
        <result property="exp" column="exp" jdbcType="INTEGER"/>
        <result property="userLevel" column="user_level" jdbcType="INTEGER"/>
        <result property="birth" column="birth" jdbcType="DATE"/>
        <result property="profileImgNo" column="profile_img_no" jdbcType="INTEGER"/>
        <association property="admin" column="adminId" select="community.solar_embassy.mapper.AdminMapper.findOne"
                     fetchType="lazy" autoMapping="true"></association>
    </resultMap>

   <!-- <sql id="Base_Column_List">
        userid,nickname,passwords,
        email,hp,tell,
        admin_id,reg_date,last_login_time,
        update_time,state,c_point,
        e_point,exp,user_level,
        birth,profile_img_no
    </sql> -->
    <insert id="insert" parameterType="community.solar_embassy.dto.Users">
        insert INTO users
            (userid, passwords, nickname, email)
        VALUES (#{userId}, #{passwords}, #{nickname}, #{email})
    </insert>


    <select id="findByUserIdAndPw" resultType="users">
        SELECT *
        FROM users
        WHERE userid = #{userId}
          AND passwords = #{passwords}
    </select>

    <delete id="deleteById">
        DELETE
        FROM users
        where userid = #{user_id}
    </delete>

    <select id="findById" resultType="community.solar_embassy.dto.Users">
        SELECT *
        FROM solar_embassy.users
        where userid = #{user_id}
    </select>
</mapper>